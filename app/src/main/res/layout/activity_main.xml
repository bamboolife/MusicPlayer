<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btn_start"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="开始" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/btn_start"
     android:layout_alignBaseline="@id/btn_start"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="停止" />

    <Button
        android:id="@+id/btn_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_stop"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@id/btn_stop"
        android:text="暂停" />
    <Button
        android:id="@+id/btn_loop"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_pause"
        android:layout_alignBaseline="@id/btn_pause"
        android:text="循环" />
</RelativeLayout>